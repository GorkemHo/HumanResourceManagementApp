@model IkMvc.Application.Model.Vm.DirectorVms.DirectorVm

@{
    ViewData["Title"] = "DirectorProfile";
    Layout = "~/Areas/Director/Views/Shared/_DirectorLayout.cshtml";
    var imageBase64 = Convert.ToBase64String(Model.ImageData);
}
<link rel="stylesheet" href="~/css/DirectorProfile.css">


<div class="container">
    <div class="main-body">



        <div class="row gutters-sm mt-3">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="data:image/jpeg;base64,@imageBase64" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <a href="#" style="font-size:20px">
                                    @Model.FirstName @Model.MiddleName @Model.LastName @Model.SecondLastName
                                </a>
                                <p class="text-secondary mb-1">Şirket Yöneticisi</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Username</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.UserName
                            </div>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Email
                            </div>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Phone</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.PhoneNumber
                            </div>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Address</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.Address
                            </div>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birth Date</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.BirthDate.ToShortDateString()
                            </div>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Birth Place</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.BirthPlace
                            </div>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Job</h6>
                            </div>
                            <a class="col-sm-9 text-secondary" href="#">
                                <!--Belki işin profiline yönlendirebiliriz-->
                                @Model.Job.Name
                            </a>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Department</h6>
                            </div>
                            <a class="col-sm-9 text-secondary" href="#">
                                @Model.Department.Name
                            </a>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Company</h6>
                            </div>
                            <a class="col-sm-9 text-secondary" href="#">
                                @Model.Company.Name
                            </a>
                        </div>
                        <hr>
                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Hire Date</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.HireDate.ToShortDateString()
                            </div>
                        </div>
                        <hr>


                        <div class="row my-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Salary</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @if (Model.Salary % 10 == 0)
                                {
                                    <span> @Model.Salary.ToString("F0") TL</span>
                                }
                                else
                                {
                                    <span> @Model.Salary.ToString("F2") TL</span>
                                }
                            </div>
                        </div>
                        <hr>

                        <div class="row pt-4">
                            <div class="col-sm-12">
                                <a class="btn btn-info" asp-area="Director" asp-action="EditDirectorProfile" asp-controller="Director">Güncelle</a>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>




