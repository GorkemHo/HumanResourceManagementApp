@{
}
@model LeaveRequestVm

<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Leave Request Details
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>Leave Type</th>
                    <td>@Model.LeaveType</td>
                </tr>
                <tr>
                    <th>Start Date</th>
                    <td>@Model.StartDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>End Date</th>
                    <td>@Model.EndDate.ToShortDateString()</td>
                </tr>
                <tr>
                    <th>Number of Days</th>
                    <td>@Model.NumberOfDays</td>
                </tr>
                <tr>
                    <th>Request Date</th>
                    <td>@Model.RequestDate.ToShortDateString()</td>
                </tr>
                @if(Model.ResponseDate is not null)
                {
                    <tr>
                        <th>Response Date</th>
                        <td>@Model.ResponseDate</td>
                    </tr>
                }
                else
                {
                    <tr>
                        <th>Response Date</th>
                        <td>Your request has not been responded to yet.</td>
                    </tr>
                }
                <tr>
                    <th>Status</th>
                    <td>@Model.ApprovalStatus.ToString()</td>
                </tr>
            </table>
        </div>
    </div>
</div>
