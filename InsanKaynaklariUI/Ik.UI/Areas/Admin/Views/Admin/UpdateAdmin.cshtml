@model IkMvc.Application.Model.Dto.AdminDtos.UpdateAdminDto

@{
    ViewData["Title"] = "Update Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/updateadmin.css" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <style>
        .form-group {
            margin-bottom: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 10px;
        }

        label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h2 class="text-center">@ViewData["Title"]</h2>
                <hr />
                <form asp-action="UpdateAdmin" enctype="multipart/form-data" method="post">
                    @* <div asp-validation-summary="All" class="text-danger"></div> *@
                    <input type="hidden" asp-for="Id" value="@Model.Id" />
                    @* <input asp-for="UpdateDate" class="form-control" type="date" hidden value="@DateTime.Now" />
                    <input asp-for="Status" class="form-control" type="hidden" value="@Status.Modified" /> *@
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="FirstName" />
                    <input type="hidden" asp-for="MiddleName" />
                    <input type="hidden" asp-for="LastName" />
                    <input type="hidden" asp-for="SecondLastName" />
                    <input type="hidden" asp-for="BirthDate" />
                    <input type="hidden" asp-for="TerminationDate" />
                    <input type="hidden" asp-for="BirthPlace" />
                    <input type="hidden" asp-for="TcIdentity" />
                    <input type="hidden" asp-for="HireDate" />
                    <input type="hidden" asp-for="Salary" class="form-control" />
                    <input type="hidden" asp-for="JobId" class="form-control" />
                    <input type="hidden" asp-for="DepartmentId" class="form-control" />
                    <input type="hidden" asp-for="UserName" />
                    @if (Model.ImageData != null)
                    {
                        <input type="hidden" asp-for="ImageData" />
                    }
                    

                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageData" class="control-label">Image:</label>
                        <div class="custom-file">
                            <input type="file" name="imageFile" class="custom-file-input" id="imageFile" style="display: none;">
                            <label class="custom-file-label" for="imageFile">Choose file</label>
                        </div>
                        <span asp-validation-for="ImageData" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Add smooth scrolling to anchor links
            $('a[href^="#"]').on('click', function (event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top
                    }, 1000);
                }
            });

            // Add file input styling
            $('input[type="file"]').change(function (e) {
                var fileName = e.target.files[0].name;
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
</body>
</html>
